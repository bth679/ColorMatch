<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tan.colormatch.Setting"
    android:onClick="onClickMusic"
    android:background="#caf48c"
    android:backgroundTint="#96cfb5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;- BACK"
        android:id="@+id/back1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickMusic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MUSIC"
        android:id="@+id/music"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/musicSlider"
        android:layout_above="@+id/sfxSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MUSIC:"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/musicSlider"
        android:layout_toStartOf="@+id/musicSlider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SFX:"
        android:id="@+id/textView5"
        android:layout_above="@+id/back1"
        android:textStyle="bold"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="122dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sfxSlider"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView4"
        android:indeterminate="false" />


</RelativeLayout>
